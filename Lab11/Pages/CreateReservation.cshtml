@page
@model MyApp.Namespace.CreateReservationModel
@{
    ViewData["Title"] = "Create Reservation";
}

<h2>Create Reservation</h2>

<form method="post" class="mt-4">
    <div class="form-group">
        <label asp-for="Reservation.RoomId" class="control-label">Room</label>
        <select asp-for="Reservation.RoomId" class="form-control" asp-items="Model.Rooms"></select>
        <span asp-validation-for="Reservation.RoomId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Reservation.ReservedBy" class="control-label">Name</label>
        <input asp-for="Reservation.ReservedBy" class="form-control" />
        <span asp-validation-for="Reservation.ReservedBy" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Reservation.ReservationDateTime" class="control-label">Date</label>
        <input asp-for="Reservation.ReservationDateTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="Reservation.ReservationDateTime" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
